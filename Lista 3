// Problema 10

package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        int fat = 1;
        int n = 1;
        int valor;

        Scanner reader = new Scanner(System.in);

        System.out.println("Digite um valor inteiro positivo: ");
        valor = reader.nextInt();

        if (fat < valor) {
            while (fat < valor) {
                n = n + 1;
                fat = fat * n;
            }
        } else if (fat == valor) {
            System.out.println(+ valor +, " corresponde ao fatorial de ", + n);
        } else {
            System.out.println(+ valor +, " não corresponde a nenhum fatorial.");
        }
    }
}
