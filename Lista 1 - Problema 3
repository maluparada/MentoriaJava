package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Scanner reader = new Scanner(System.in);

        System.out.print("Informe o saldo:\n");
        float saldo = reader.nextFloat();

        System.out.println("O seu saldo reajustado fica:", saldo*1.01);
    }
}
