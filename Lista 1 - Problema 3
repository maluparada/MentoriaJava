package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Scanner reader = new Scanner(System.in);

        System.out.print("Informe o saldo:\n");
        float saldo = reader.nextFloat();

        double saldoreajustado = saldo*1.01;

        System.out.printf("O seu saldo reajustado fica:\n" + saldoreajustado);

    }
}
