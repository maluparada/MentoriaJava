import java.util.Scanner;

public class IdadeDiaMesAno {
	public static void main(String[] args){
		final short dias_ano = 365;
		final short dias_mes = 30;
		short dias;
		short meses;
		short anos;
		Scanner leitor = new Scanner(System.in);
		
		System.out.println("Qual a sua idade?");
		System.out.print("Anos: ");
		anos = leitor.nextShort();
		
		System.out.print("Meses: ");
		meses = leitor.nextShort();
		
		System.out.print("Dias: ");
		dias = leitor.nextShort();
		
		dias += (anos * dias_ano) + (meses * dias_mes);
		
		System.out.println("\n\nA sua idade em dias Ã©: " + dias);
	}
}
