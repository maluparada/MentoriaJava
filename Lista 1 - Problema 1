package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        int diasano = 365;
        int diasmes = 30;
        int anos;
        int mes;
        int dias;

        Scanner reader = new Scanner(System.in);

        System.out.println("Quantos anos você tem?");
        anos = reader.nextInt();

        System.out.print("Meses:");
        mes = reader.nextInt();

        System.out.print("Dias:");
        dias = reader.nextInt();

        dias = (anos * diasano) + (mes * diasmes) + (dias);

        System.out.printf("A sua idade em dias é:\n" + dias);
    }
}
